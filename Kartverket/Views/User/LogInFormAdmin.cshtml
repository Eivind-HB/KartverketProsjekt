@model Kartverket.Data.Login

@{
    ViewData["Title"] = "AdminLogIn";
}

<div class="page-container registration-form">
    <h1>Logg Inn Admin</h1>

    <form asp-action="LogInFormAdmin" method="post">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>Error!</strong>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        }

        <div class="form-group">
            <label asp-for="Mail">Email</label>
            <input asp-for="Mail" class="form-control" />
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Passord</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Logg Inn</button>
    </form>
</div>
