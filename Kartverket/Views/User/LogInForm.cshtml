@model Kartverket.Data.Login

@{
    ViewData["Title"] = "Logg inn";
}

<div class="page-container registration-form">
    <h1>Logg Inn</h1>

    <form asp-action="LogInForm" method="post">
        @Html.AntiForgeryToken()
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>Error!</strong>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        }

        <div class="form-group">
            <label asp-for="Mail">Email</label>
            <input asp-for="Mail" class="form-control" />
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Passord</label>
            <input asp-for="Password" class="form-control password-input" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group password-toggle-container">
        <label class="password-toggle">
            <input type="checkbox" id="togglePassword" />
            <span class="toggle-label">Vis passord</span>
        </label>
        </div>

        <div class="form-group">
        <button type="submit" class="btn btn-primary">Log Inn</button>
        </div>

    </form>
    <div class="registration-section">
        <a asp-action="RegistrationForm" method="post">
            <button type="submit" class="btn2 btn-secondary2">Registrer deg</button>
        </a>
    </div>
    <div class="registration-section">
        <a asp-action="ChangePassword" method="post">
            <button type="submit" class="btn2 btn-secondary2">Glemt passord?</button>
        </a>
    </div>
    <div class="registration-section">
        <a asp-controller="Admin" asp-action="LogInFormAdmin" method="post">
            <button type="submit" class="btn2 btn-secondary2">Admin</button>
        </a>
    </div>
</div>

<script src="~/js/PasswordVisibility.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}