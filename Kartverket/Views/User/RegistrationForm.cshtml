@model Kartverket.Data.User

@{
    ViewData["Title"] = "Bruker Registrering";
}

<div class="page-container registration-form">
    <h1>Bruker Registrering</h1>

    <form asp-action="UDOverview" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="UserName">Brukernavn:</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Mail">Emailen din:</label>
            <input asp-for="Mail" class="form-control" type="email" />
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Passord:</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Send Informasjon</button>
    </form>
</div>