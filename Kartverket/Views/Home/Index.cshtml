@model Kartverket.Models.KommuneInfoViewModel

@{
    ViewData["Title"] = "Feilmelding til kart";
}

<div class="page-container index-container">
    <h1>Melding om feil i kart</h1>
    <p class="lead">Kartverkets data er sentrale i Norges offisielle datagrunnlag og brukes i en lang rekke kart på papir og nett. Her kan du hjelpe oss med å holde kartene oppdatert.</p>

    <div class="registration-section">
        <h2>Registrering</h2>
        <h4>Noen av funskjonene til denne siden vil kreve at du registrer deg! Gjør det her:</h4>
        <h3><a asp-action="RegistrationForm">Registrer deg</a> </h3>
    </div>

    <div class="kommune-search-section">
        <h2>Søk etter kommune informasjon</h2>
        <form asp-action="KommuneInfoApi" method="post" class="kommune-form">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="kommuneNr">Kommune Nummer:</label>
                <input type="text" id="kommuneNr" name="kommuneNr" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Søk</button>
        </form>
    </div>

    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">
            @ViewData["Error"]
        </div>
    }

    @if (Model != null)
    {
        <div class="kommune-info-section mt-4">
            <h2>Kommune informasjon</h2>
            <table class="table">
                <tr>
                    <th>Kommunenavn</th>
                    <td>@Model.Kommunenavn</td>
                </tr>
                <tr>
                    <th>Kommunenummer</th>
                    <td>@Model.Kommunenummer</td>
                </tr>
                <tr>
                    <th>Fylkesnavn</th>
                    <td>@Model.Fylkesnavn</td>
                </tr>
                <tr>
                    <th>Samisk Forvaltningsområde</th>
                    <td>@(Model.SamiskForvaltningsomrade ? "Ja" : "Nei")</td>
                </tr>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const homeNavItem = document.querySelector('.nav-item a[href="/"]');
            if (homeNavItem) {
                homeNavItem.parentElement.style.backgroundColor = 'var(--light-green)';
            }
        });
    </script>
}