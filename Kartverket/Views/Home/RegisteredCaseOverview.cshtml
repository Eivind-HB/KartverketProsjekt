@model Kartverket.Data.Case

@{
    ViewData["Title"] = "Ny Registrert Sak";
}

<h1>Sak Registrert!</h1>


<h3> Du har send inn saken uten en brukerprofil. Om du ønsker å følge saken videre MÅ du ta vare på Saksnummeret.
      Med Saksnummeret kan du søke etter saken i "registrerte rettelser" siden </h3>
<div class="page-container">
    <div class="issue-location-details">
        <!-- Case detail table -->
        <table class="table table-compact">
            <thead>
                <tr>
                    <th>Saksnummer</th>
                    <th>Type Sak</th>
                    <th>Sak status</th>
                    <th>Innmeldings dato</th>
                    <th>GeoJson</th>
                    <th>Beskrivelse</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.CaseNo</td>
                    <td>@Model.Issue_IssueNr</td>
                    <td>@Model.StatusNo</td>
                    <td>@Model.Date</td>
                    <td>@Model.LocationInfo</td>
                    <td>@Model.Description</td>                    
                </tr>
            </tbody>
        </table>        
    </div>

    <div class="btn-group">
        <!-- Button to display the image in a modal.
         When clicked, it triggers the 'show.bs.modal' event,
         passing the case ID to fetch the image source from the server. -->
        @if (@Model.Images != null)
        {
            <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#imageModal" data-case-id="@Model.CaseNo">Vis Bilde</button>
        }
    </div>

    <div class="map-change-container">
        <div id="map" class="map-section"></div>
    </div>

     <!--Stores the case-data to be used in DrawnCase.js. Safer than html.raw -->    
    <div class="case-data"
         data-case-no="@Model.CaseNo"
         data-geojson="@Model.LocationInfo">
    </div>

    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Tilbake til hjem</a>
</div>

@await Html.PartialAsync("_ImageModal")

@section Scripts {
    <script src="~/js/leafletMap.js"></script>
    <script src="~/js/modal.js"></script>
    <script src="~/js/DrawnCase.js"></script>

    
    @* This function fetches GeoJSON and caseNo from the case model using DOM
       The function is from DrawnCase.js
    *@
        <script>
             // Fetches case data from DOM
        const caseDataElement = document.querySelector('.case-data');

        // Calls the singleDrawnChange from DrawnCase.js using the case-data.
        if (caseDataElement) {
            singleDrawnChange(
                JSON.parse(caseDataElement.getAttribute('data-geojson')),
                caseDataElement.getAttribute('data-case-no')
            );
        }

        document.addEventListener('DOMContentLoaded', function () {
                const homeNavItem = document.querySelector('.nav-item a[href*="HasProfileCaseOverview"]');
                if (homeNavItem) {
                    homeNavItem.parentElement.style.backgroundColor = 'var(--light-green)';
                }
            });
        </script>
}