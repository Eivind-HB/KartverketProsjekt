@model Kartverket.Data.LoginAdmin

@{
    ViewData["Title"] = "AdminLogIn";
}

<div class="page-container registration-form">
    <h1>Logg Inn Som Admin</h1>

    <form asp-action="LogInFormAdmin" method="post">
        @Html.AntiForgeryToken()
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>Error!</strong>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        }

        <div class="form-group">
            <label asp-for="Mail">Email</label>
            <input asp-for="Mail" class="form-control" />
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Passord</label>
            <input asp-for="Password" class="form-control password-input" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group password-toggle-container">
            <label class="password-toggle">
                <input type="checkbox" id="togglePassword" />
                <span class="toggle-label">Vis passord</span>
            </label>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Logg Inn</button>
        </div>
    </form>
</div>

<script src="~/js/PasswordVisibility.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}